<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <link rel="stylesheet" href="/stylesheets/reset.css" />
        <link rel="stylesheet" href="/stylesheets/create.css" />
    </head>
    <body>
        <div class="decor">
            <a href="/Admin" class="shop">Home
            </a>
        </div>
        <div class="create-container">
            <h1 class="create">
                Update Account
            </h1>
            <form action="/Admin/update/{{Acc._id}}" class="form" method="post">
                <label for="" class="form__label-name">Email</label>
                <input
                    type="text"
                    class="form__input-name"
                    name="name"
                    value="{{Acc.name}}"
                />
                <label for="" class="form__label-name">Role</label>
                <select
                    aria-label="Select a role"
                    class="form__input-type"
                    name="role"
                    required
                >
                    <option
                        class="form__input-type-project"
                        value="admin"
                    >Admin</option>
                    <option
                        class="form__input-type-project"
                        value="customer"
                    >Customer</option>
                </select>
                <label for="" class="form__label-type">Password</label>
                <input
                    type="text"
                    class="form__input-name"
                    name="password"
                    value="{{Acc.password}}"
                />
                <div class="form-cta">
                    <a href="/Admin" class="form-cta__cancel">Cancel</a>
                    <input
                        type="submit"
                        class="form-cta__create"
                        value="Update"
                    />
                </div>
            </form>
        </div>
    </body>
</html>