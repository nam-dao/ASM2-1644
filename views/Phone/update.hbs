<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <link rel="stylesheet" href="/stylesheets/reset.css" />
        <link rel="stylesheet" href="/stylesheets/create.css" />
    </head>
    <body>
        <div class="decor">
            <a href="/PC" class="shop">Shop
            </a>
        </div>
        <div class="create-container">
            <h1 class="create">
                Update Phone
            </h1>
            <form
                action="/Phone/update/{{Phone._id}}"
                class="form"
                method="post"
            >
                <label for="" class="form__label-name">Name</label>
                <input
                    type="text"
                    class="form__input-name"
                    name="name"
                    value="{{Phone.name}}"
                />
                <label for="" class="form__label-type">Origin</label>
                <input
                    type="text"
                    class="form__input-name"
                    name="origin"
                    value="{{Phone.origin}}"
                />
                <label for="" class="form__label-type">Price</label>
                <input
                    type="text"
                    class="form__input-name"
                    name="price"
                    value="{{Phone.price}}"
                />
                <label for="" class="form__label-type">Old Price</label>
                <input
                    type="text"
                    class="form__input-name"
                    name="oldPrice"
                    value="{{Phone.oldPrice}}"
                />
                <label for="" class="form__label-type">Link images</label>
                <input
                    type="text"
                    class="form__input-name"
                    name="image"
                    value="{{Phone.image}}"
                />
                <label
                    for=""
                    class="form__label-description"
                >Description</label>
                <textarea
                    class="form__input-description"
                    name="description"
                    required
                ></textarea>
                <div class="form-cta">
                    <a href="/Admin" class="form-cta__cancel">Cancel</a>
                    <input
                        type="submit"
                        class="form-cta__create"
                        value="Update"
                    />
                </div>
            </form>
        </div>
    </body>
</html>